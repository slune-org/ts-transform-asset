{
  "name": "ts-transform-asset",
  "version": "1.0.0",
  "description": "Typescript transformer used to convert asset imports to file names",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "watch": "npm-watch test",
    "prepublishOnly": "npm run chain",
    "chain": "npm run clean && npm run test && npm run build",
    "build": "npm run transpile",
    "test": "npm run lint && npm run testUnit",
    "lint": "tslint src/**/*.ts",
    "testUnit": "nyc mocha --require ts-node/register --require source-map-support/register 'src/**/*.spec.ts'",
    "clean": "rimraf dist",
    "transpile": "tsc"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "typescript",
    "transform",
    "asset",
    "filename"
  ],
  "author": "St√©phane Veyret",
  "license": "MIT",
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  },
  "dependencies": {},
  "peerDependencies": {
    "typescript": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.9",
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "rimraf": "2.6.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.1.6"
  }
}
